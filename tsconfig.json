{
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "es2017",
      "esnext.intl",
      "es2017.intl",
      "es2018.intl",
      "ScriptHost",
      "es2019",
      "ES2021.String"
    ],
    "target": "es5",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "*": ["*", "types/*", "remote-types/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src/**/*", "types/*", "./**/*.json"],
  "exclude": ["./dist", "./node_modules"],
  "strictFunctionTypes": false
}
